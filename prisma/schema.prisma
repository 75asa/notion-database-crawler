// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Database {
  id           String   @unique
  name         String
  createdAt    DateTime
  lastEditedAt DateTime
  pages        Page[]
  size         Int      @default(0)
}

model Page {
  id           String   @unique
  name         String
  createdAt    DateTime
  url          String
  Database     Database @relation(fields: [databaseId], references: [id])
  databaseId   String
  LastEditedBy User     @relation(fields: [userId], references: [id])
  userId       String
}

model User {
  id        String  @unique
  name      String
  avatarURL String
  email     String?
  Page      Page[]
}
