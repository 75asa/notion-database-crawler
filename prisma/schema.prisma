model Database {
  id                String   @id @default(uuid())
  notionId          String   @unique
  createdAt         DateTime
  lastEditedAt      DateTime
  lastFetchedAt     DateTime @db.Timestamptz
  firstIntegratedAt DateTime @db.Timetz
  pages             Page[]
  size              Int      @default(0)
  // cluster           Cluster
}

model Page {
  id         String   @id @default(uuid())
  Database   Database @relation(fields: [databaseId], references: [id])
  databaseId String
  notionId   String   @unique
  createdAt  DateTime
  url        String
}
