// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Database {
  id                String   @unique
  createdAt         DateTime
  lastEditedAt      DateTime
  lastFetchedAt     DateTime
  firstIntegratedAt DateTime
  pages             Page[]
  size              Int      @default(0)
}

model Page {
  id           String   @unique
  name         String?
  Database     Database @relation(fields: [id], references: [id])
  createdAt    DateTime
  lastEditedBy User     @relation(fields: [userId], references: [id])
  url          String
  userId       String
}

model User {
  id        String @unique
  name      String
  avatarURL String
  email     String
  Page      Page[]
}
