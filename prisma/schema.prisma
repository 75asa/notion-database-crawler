// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Database {
  id                  String    @unique
  name                String
  database_created_at DateTime
  last_edited_at      DateTime
  url                 String
  Pages               Page[]
  size                Int       @default(0)
  created_at          DateTime? @default(now())
}

model Page {
  id              String    @unique
  name            String
  page_created_at DateTime
  url             String
  properties      Json?
  Database        Database  @relation(fields: [database_id], references: [id])
  database_id     String    @map("database_id")
  CreatedBy       User      @relation(fields: [user_id], references: [id])
  user_id         String    @map("user_id")
  created_at      DateTime? @default(now())
}

model User {
  id         String    @unique
  name       String
  avatar_url String
  email      String?
  Page       Page[]
  updated_at DateTime? @default(now())
}
