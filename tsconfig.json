{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-slack",
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "esModuleInterop": true,
    // "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "typeRoots": ["notion-api-types"],
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["@types/node"]
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts"],
  "include": ["src/**/*"]
}
